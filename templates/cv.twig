<!DOCTYPE html>
<html lang="{{ cv.lang ? cv.lang : 'en' }}">
<head>
  <meta charset="UTF-8">
  <title>{{ cv.name }} – {{ cv.title }}</title>
  <link rel="stylesheet" href="{{ env.APP_URL }}public/css/style.css">
</head>
<body class="p-8 font-sans text-gray-900 max-w-2xl mx-auto">
  <header class="mb-6">
    <h1 class="text-4xl font-bold">{{ cv.name }}</h1>
    <h2 class="text-2xl text-gray-700">{{ cv.title }}</h2>
  </header>

  <section class="mb-6">
    <p>{{ cv.summary }}</p>
  </section>

  <section class="mb-6">
    <h3 class="text-xl font-semibold">Umiejętności</h3>
    <ul class="list-disc list-inside">
      {% for skill in cv.skills %}
        <li>{{ skill }}</li>
      {% endfor %}
    </ul>
  </section>

  <section>
    <h3 class="text-xl font-semibold">Doświadczenie</h3>
    {% for job in cv.experience %}
      <div class="mb-4">
        <strong>{{ job.position }}</strong> – {{ job.company }}<br>
        <em>{{ job.period }}</em>
        <p>{{ job.description }}</p>
      </div>
    {% endfor %}
  </section>
</body>
</html>
